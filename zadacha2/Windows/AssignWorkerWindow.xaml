<Window x:Class="zadacha2.Windows.AssignWorkerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zadacha2.Windows"
        mc:Ignorable="d"
        Title="Назначение мастера" Height="200" Width="300">

    <!-- Фон и стили окна -->
    <Grid Background="#F4E8D3">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">

            <!-- Заголовок окна -->
            <Label Content="Назначение мастера" HorizontalAlignment="Center" FontSize="20" Foreground="#333333" Margin="0,0,0,20"/>

            <!-- Выпадающий список для выбора мастера -->
            <StackPanel Margin="0,10">
                <Label Content="Выберите мастера" Foreground="#333333"/>
                <ComboBox x:Name="workerComboBox" Padding="8" Background="#FFFFFF" BorderBrush="#D3D3D3" BorderThickness="1" Width="200"/>
            </StackPanel>

            <!-- Кнопка подтверждения -->
            <Button Content="Подтвердить" Click="ConfirmButton_Click" Width="200" Margin="0,20,0,0" Background="#67BA80" Foreground="White" BorderBrush="#67BA80" BorderThickness="1" FontWeight="Bold"/>

        </StackPanel>
    </Grid>
</Window>
